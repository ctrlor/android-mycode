<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

	<Button
	    android:id="@+id/btn_send_intent_call"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Send intent: Call"
	    />
	
	<Button
	    android:id="@+id/btn_send_intent_test"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Send intent: Test"
	    />
	
	<Button
	    android:id="@+id/btn_send_intent_broadcast_test"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Send intent: broadcast"
	    />
	
</LinearLayout>
