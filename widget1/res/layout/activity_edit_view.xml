    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
   <!-- EditText View -->
   <EditText
       android:id="@+id/et_editText"
       android:labelFor="@+id/et_editText"
       android:layout_width="wrap_content"
