<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ctrlor.widget1.MainActivity" 
    android:orientation="vertical"
    >

    <!-- show NO.1 tip -->
    <TextView
        android:id="@+id/funcItem_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <!-- show Textview and Button -->
    <TextView
        android:id="@+id/show_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
    
    <Button 
        android:id="@+id/Click_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button" />

    <!-- show NO.2 tip -->
    <TextView
        android:id="@+id/funcItem_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- show two line's Textview -->
    <TextView
        android:id="@+id/text_view01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/text_view02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all" 
        android:text="@string/text_view2" />
    
    <!-- show NO.3 tip -->
    <TextView
        android:id="@+id/funcItem_tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- show colorful Textview -->
    <Button 
        android:id="@+id/show_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- show NO.4 tip -->
    <TextView
        android:id="@+id/funcItem_tip4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- show typeface Textview -->
    <Button
        android:id="@+id/button_showTypeface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
</LinearLayout>
